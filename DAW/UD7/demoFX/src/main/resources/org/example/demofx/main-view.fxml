         <children>
            <Button fx:id="crearButton" mnemonicParsing="false" onAction="#onSaveButtonAccion" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2cabf2;" text="Crear" textFill="WHITE">
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="cancelarButton" mnemonicParsing="false" onAction="#onCloseButtonAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #e44e4e;" text="Cancelar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
