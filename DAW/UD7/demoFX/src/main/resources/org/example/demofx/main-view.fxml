            <Label alignment="CENTER" prefHeight="101.0" prefWidth="479.0" text="INSERTE PERSONA">
               <font>
                  <Font size="37.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox fx:id="paneNombre" alignment="CENTER" prefHeight="25.0" prefWidth="190.0">
         <children>
            <Label alignment="CENTER" text="Nombre">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="nombreTextField" prefWidth="350.0" promptText="Nombre">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox fx:id="paneApellido" alignment="CENTER" prefHeight="25.0" prefWidth="190.0">
