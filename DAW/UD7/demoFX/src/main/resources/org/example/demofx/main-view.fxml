            <Label alignment="CENTER" text="Apellido">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="apellidoTextField" prefWidth="350.0" promptText="Apellido">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox fx:id="paneApellido1" alignment="CENTER" prefHeight="25.0" prefWidth="190.0">
         <children>
            <Label alignment="CENTER" text="Edad">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="edadTextField" prefWidth="350.0" promptText="Edad">
               <HBox.margin>
                  <Insets left="55.0" />
