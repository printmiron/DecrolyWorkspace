           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
      
               <Button fx:id="btnOnSavePersona" mnemonicParsing="false" onAction="#btnOnSavePersonaOnAction" prefWidth="150.0" styleClass="my-button" text="Guardar" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
               <Button fx:id="btnOnExitInsertPersona" mnemonicParsing="false" onAction="#btnOnExitInsertPersonaOnAction" prefWidth="150.0" text="Salir" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
